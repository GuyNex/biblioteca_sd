<div class="tudo">
  <div class="row py-5 px-4">
    <div class="col-md-7 mx-auto">
      <!-- Profile widget -->
      <div class="bg-white shadow rounded overflow-hidden">
        <div class="px-4 pt-4 pb-4 cover">
          <div class="media align-items-end profile-head ">
            <div class="profile mr-3 " >
              <%if @book.photo.attached? %>
                <%= image_tag @book.photo, :class => "img-thumbnail", :atl => "Avatar", width: 350%>
              <% else %>
                <img class="poster_size" alt="Poster" src="https://closekids.com.br/wp-content/uploads/2016/10/default-placeholder.png" width="200px" height="200px">
              <% end %>
            </div>
            <div class="media-body mb-0 text-white">
              <br><h4 class="mt-0 mb-0"><%=@book.title%></h4><br>
            </div>
          </div>
        </div>
        <div class="bg-light p-4 d-flex justify-content text-center">
            <a>Autor: <%=@book.author %></a>
        </div>
        <div class="bg-light p-4 d-flex justify-content text-center">
          <a>Data de publicação: <%= @book.date %></a>
        </div>
        <div class="bg-light p-4 d-flex justify-content-end text-center">
          <ul class="list-inline mb-0">
            <% if @book.file.attached? %>
            <a class="btn btn-outline-dark btn-sm btn-block" <%= link_to "LER LIVRO", pdfjs.full_path(file: rails_blob_path(@book.file)), target: '_blank' %>
             <% else %>
              <a href="#" class="btn btn-outline-dark btn-sm disabled" role="button" aria-disabled="true">Indisponível</a>
            <% end %>
          </ul>
        </div>
        <div class="px-4 py-3">
          <h5 class="mb-0">DESCRIÇÃO:</h5>
          <div class="p-4 rounded shadow-sm bg-light">
            <%if @book.description != nil %>
              <a><%= @book.description %></a>
              <% else %>
            <a>Livro sem descrição</a>
            <%end%>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>